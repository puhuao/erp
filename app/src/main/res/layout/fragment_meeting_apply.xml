<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="42dp"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.managesystem.widegt.JustifyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/meeting_name"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:textColor="@color/text_black"/>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/meeting_hint_name"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="@color/devider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.managesystem.widegt.JustifyTextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:text="@string/meeting_location"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:includeFontPadding="true"
                    android:textColor="@color/text_black"/>
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:text="@string/meeting_hint_location"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="@color/text_hint"
                    android:textColorHint="@color/text_hint"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@drawable/ic_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.managesystem.widegt.JustifyTextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:text="@string/meeting_type"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:includeFontPadding="true"
                    android:textColor="@color/text_black"/>
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:text="@string/meeting_hint_type"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="@color/text_hint"
                    android:textColorHint="@color/text_hint"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@drawable/ic_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.managesystem.widegt.JustifyTextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:text="@string/meeting_start_time"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:includeFontPadding="true"
                    android:textColor="@color/text_black"/>
                <EditText
                    android:id="@+id/et_start_time"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/meeting_hint_start_time"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.managesystem.widegt.JustifyTextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:text="@string/meeting_end_time"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:includeFontPadding="true"
                    android:textColor="@color/text_black"/>
                <EditText
                    android:id="@+id/et_end_time"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/meeting_hint_end_time"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.managesystem.widegt.JustifyTextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:text="@string/meeting_description"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:includeFontPadding="true"
                    android:textColor="@color/text_black"/>
                <EditText
                    android:id="@+id/et_description"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/meeting_hint_description"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/fab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:text="@string/meeting_submit"
            android:textSize="16sp"
            android:background="@drawable/selector_btn_login"
            android:textColor="@color/button_text_selector"
            />
        </LinearLayout>
</LinearLayout>